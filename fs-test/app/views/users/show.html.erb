<h1>Welcome, <%= current_user.name %></h1>

<% @motels.each do |motel| %>
  
 <h2><%= motel.name %></h2>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Booking Code</th>
                  <th>Amount Paid</th>
                  <th>Booking Fee</th>
                  <th>Booking Period</th>
                  <th>Room</th>
                </tr>
              </thead>
              <tbody>
            <p><% motel.bookings.each do |booking| %>
                <tr>
                  <td><%= booking.booking_code %></td>
                  <td><%= booking.amount_centavos %></td>
                  <td><%= booking.fee_percentage %></td>
                  <td><%= booking.booking_period %></td>
                  <td><%= booking.room.name %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>
<% end %>